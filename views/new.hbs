<div class="container mt-5">
  <div class="record">
    <form action="/records/new" method="POST">
      <h3> 請輸入你的支出</h3>
      <div class="row-sm">
        <label class="form-label" for="name">名稱：</label>
        <input type="text" name="name" required>
      </div>
      <div class="row-sm">
        <label class="form-label" for="date">日期：</label>
        <input type="date" id="date" name="date" required>
      </div>
      <div class="row-sm">
        <label class="form-label" for="category">類別：</label>
        <select placeholder="category" name="category" required>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>
      <div class="row-sm">
        <label class="form-label" for="amount">金額：</label>
        <input type="number" name="amount" required>
      </div>
      <div class="row-sm">
        <label class="form-label" for="merchant">商家：</label>
        <input type="text" name="merchant">
      </div>
      <button type="submit"> 送出 </button>
    </form>
  </div∏

</div>